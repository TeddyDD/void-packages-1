do_install() {
	vmkdir usr/lib/pkgconfig
	sed ${FILESDIR}/${pkgname}.pc \
		-e "s;@VERSION@;${version};" \
		> ${DESTDIR}/usr/lib/pkgconfig/${pkgname}.pc
	install -Dm 644 *.{c,h} -t "${DESTDIR}"/usr/include/stb/
	vlicense LICENSE
}
