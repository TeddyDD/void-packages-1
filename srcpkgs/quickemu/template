# Template file for 'quickemu'
pkgname=quickemu
version=4.9.2
revision=1
depends="qemu spice-gtk jq procps-ng python3 cdrtools usbutils swtpm wget
 xdg-user-dirs xrandr zsync socat"
short_desc="Create and run optimised Windows, macOS and Linux virtual machines"
maintainer="Daniel Lewan <vision360.daniel@gmail.com>"
license="MIT"
homepage="https://github.com/wimpysworld/quickemu"
distfiles="https://github.com/wimpysworld/quickemu/archive/${version}.tar.gz"
checksum=fa5e2e5112deb836c0ab6035ab0aaabd1465b13e945d4a49dc975b94f1b01233

do_install() {
	vbin macrecovery
	vbin quickemu
	vbin quickget
	vlicense LICENSE
	vman docs/quickemu.1
	vman docs/quickemu_conf.1
	vman docs/quickget.1
}
